<?xml version="1.0" encoding="utf-8"?><!-- [DR-2018-64870] 마이 케이티 앱 홈화면 프로그레스 바 적용 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item
        android:id="@android:id/progress"
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <clip>
            <layer-list>
                <item>
                    <scale android:scaleWidth="100%">
                        <shape android:shape="rectangle">
                            <solid android:color="@color/color5ddfde" />
                        </shape>
                    </scale>
                </item>

            </layer-list>
        </clip>
    </item>

</layer-list>