    <item android:id="@android:id/background" android:drawable="@drawable/progress_password_bg" />

    <item android:id="@android:id/progress"
        android:top="0dp"
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp">

        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="6dp"/>
                <gradient
                    android:startColor="#23c4db"
                    android:endColor="#bca0ff"
                    android:angle="0"
                    />
            </shape>
        </scale>
    </item>

