<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="@color/white" android:state_enabled="true" android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/length_1" android:color="@color/black" />
            <solid android:color="@color/color1b1e1f" />
            <corners android:radius="@dimen/length_10" />
        </shape>
    </item>

    <item android:color="@color/white" android:state_enabled="true" android:state_focused="true">
        <shape>
            <stroke android:width="@dimen/length_1" android:color="@color/black" />
            <solid android:color="@color/color1b1e1f" />
            <corners android:radius="@dimen/length_10" />
        </shape>
    </item>

    <item android:color="@color/white" android:state_enabled="false">
        <shape>
            <stroke android:width="@dimen/length_1" android:color="@color/black" />
            <solid android:color="@color/black" />
            <corners android:radius="@dimen/length_10" />
        </shape>
    </item>

    <item android:color="@color/white" android:state_enabled="true">
        <shape>
            <stroke android:width="@dimen/length_1" android:color="@color/black" />
            <solid android:color="@color/black" />
            <corners android:radius="@dimen/length_10" />
        </shape>
    </item>

</selector>