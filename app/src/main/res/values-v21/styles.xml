<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- This is the color of the Toolbar -->
        <item name="colorPrimary">@color/status_bg</item>
        <!-- This is the color of the Status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowContentOverlay">@null</item>                  <!-- 툴바 아래 그림자 삭제 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>        <!-- 상태바 투명 처리 -->
        <item name="android:statusBarColor">@color/status_bg</item>             <!-- 상태바 색상 변경 -->
        <item name="android:fontFamily">@font/spoqa_regular</item>              <!-- 앱 전체 폰트 재정의(커스텀 폰트 적용) api 16 이상 -->
    </style>
    <!-- 메인 화면 -->
    <style name="AppThemeMain" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>   <!-- 앱실행시 배경화면 -->
        <item name="android:windowDisablePreview">false</item>
    </style>

    <!-- 로그인 로딩팝업 -->
    <style name="FullScreenDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 빅폰트 SeekBar 설정 -->
    <style name="SeekBarWithoutSteps" parent="Base.Widget.AppCompat.SeekBar.Discrete">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/sb_progressbar</item>
        <item name="android:minHeight">@dimen/length_34</item>
        <item name="android:maxHeight">@dimen/length_34</item>
        <item name="android:thumbOffset">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:thumb">@color/transparent</item>
        <item name="tickMark">@null</item>
    </style>

    <!-- 커스텀 로딩 프로그래스바 -->
    <style name="CustomProgressDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- 슬라이딩 애니메이션 테마 -->
    <style name="SlidingAnimation" parent="@style/Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowEnterAnimation">@anim/sliding_up</item>
        <item name="android:windowExitAnimation">@anim/sliding_down</item>
        <item name="android:windowBackground">@color/barcode_bg</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 코치마크 -->
    <style name="CoachMark" parent="@style/Theme.AppCompat">
        <item name="windowNoTitle">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>